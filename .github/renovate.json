{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": ["main"],
  "extends": [
    ":separateMajorReleases",
    ":rebaseStalePrs",
    ":disableRateLimiting",
    ":docker",
    ":semanticCommits",
    "group:allNonMajor"
  ],
  "enabledManagers": ["github-actions"],
  "commitMessageAction": "1 VERB 1",
  "commitMessageTopic": "2 {{depName}} 2",
  "commitMessageExtra": "3 {{#if isPinDigest}}{{{newDigestShort}}}{{else}}{{#if isMajor}}{{prettyNewMajor}}{{else}}{{#if isSingleVersion}}{{prettyNewVersion}}{{else}}{{#if newValue}}{{{newValue}}}{{else}}{{{newDigestShort}}}{{/if}}{{/if}}{{/if}}{{/if}} 3"
}
